<h1 class="text-primary font-weight-light">Register</h1>
<form action="/user" method="POST">
  <input type="text" class="form-control my-2" name="username" placeholder="Username" required>
  <input type="email" class="form-control my-2" name="email" placeholder="Email">
  <input type="password" class="form-control my-2" name="password" placeholder="Password" required>
  <input type="submit" class="form-control btn btn-primary my-2" value="submit">
</form>